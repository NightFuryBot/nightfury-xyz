
[*]
charset = utf-8
end_of_line = crlf
indent_style = space

[src/**.{kt}]
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[{public/**.{html}, src/**.{js, css}}]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md}]
trim_trailing whitespace = true
insert_final_newline = false

[*.json]
indent_size = 2
end_of_line = lf
